<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="VideoSearch.Views.Details"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout
            Padding="10"
            Orientation="Vertical"
            Spacing="10"
            VerticalOptions="StartAndExpand">

            <StackLayout Padding="10,0,10,0" Orientation="Horizontal">
                <Label
                    FontSize="Large"
                    HorizontalOptions="StartAndExpand"
                    Text="{Binding Movie.Title}" />
                <Label HorizontalOptions="End" Text="{Binding Movie.ReleaseYear}" />
            </StackLayout>
            <Image Source="{Binding Movie.Image}" VerticalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
